<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Signup">


    <include
        android:layout_gravity="top"
        android:id="@+id/diet_main_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/actionbar_top"/>
    <ScrollView
        android:id="@+id/scrollmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/log_sec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="아이디/비밀번호"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/log_myID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="120dp"
                android:background="@drawable/my_gray_edittext"
                android:ems="10"
                android:hint="아이디"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/log_sec1" />

            <Button
                android:id="@+id/log_IDconfirmBtn"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="중복확인"
                android:textSize="12dp"
                app:layout_constraintLeft_toRightOf="@id/log_myID"
                app:layout_constraintTop_toBottomOf="@id/log_sec1" />

            <EditText
                android:id="@+id/log_myPW"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/my_gray_edittext"
                android:ems="10"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/log_myID" />

            <EditText
                android:id="@+id/log_myPWconfirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/my_gray_edittext"
                android:ems="10"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/log_myPW" />

            <TextView
                android:id="@+id/log_sec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="회원 정보"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_myPWconfirm" />

            <EditText
                android:id="@+id/log_myName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/my_gray_edittext"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/log_sec2" />

            <EditText
                android:id="@+id/log_myAlias"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/my_gray_edittext"
                android:ems="10"
                android:hint="닉네임"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/log_myName" />

            <EditText
                android:id="@+id/log_myPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/my_gray_edittext"
                android:ems="10"
                android:hint="휴대폰 번호"
                android:maxLength="13"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@id/log_myAlias" />

            <TextView
                android:id="@+id/log_sec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="생년월일"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_myPhone" />

            <Button
                android:id="@+id/log_myBirthBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="생년월일 선택"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_sec3" />


            <TextView
                android:id="@+id/log_sec4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="이메일"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_myBirthBtn" />

            <EditText
                android:id="@+id/log_myEmail"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_gray_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_sec4" />

            <TextView
                android:id="@+id/log_whelk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="\@"
                android:textSize="20dp"
                app:layout_constraintLeft_toRightOf="@id/log_myEmail"
                app:layout_constraintTop_toBottomOf="@id/log_sec4" />


            <EditText
                android:id="@+id/log_myDomain"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_500"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:enabled="false"
                app:layout_constraintLeft_toLeftOf="@id/log_whelk"
                app:layout_constraintTop_toBottomOf="@id/log_sec4" />

            <LinearLayout
                android:onClick="OnclickEmailChoice"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/my_gray_edittext"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_myEmail"
                >

                <TextView
                    android:id="@+id/log_email_choice"
                    android:padding="5dp"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_down_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>



            </LinearLayout>


            <TextView
                android:id="@+id/log_sec5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="성별"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_myEmail" />

            <Button
                android:id="@+id/log_myM"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:text="남성"
                android:textColor="@color/purple_500"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_sec5" />

            <Button
                android:id="@+id/log_myFM"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:text="여성"
                android:textColor="@color/purple_500"
                app:layout_constraintLeft_toRightOf="@id/log_myM"
                app:layout_constraintTop_toBottomOf="@id/log_sec5" />

            <TextView
                android:id="@+id/log_sec6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="약관 및 서비스 동의"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_myM" />


            <CheckBox
                android:id="@+id/log_service1check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="[필수] 회원가입 약관동의"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_sec6" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/log_scroll"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/my_gray_edittext"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_service1check"
                tools:layout_editor_absoluteY="220dp">

                <TextView
                    android:id="@+id/log_long"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    />
            </androidx.core.widget.NestedScrollView>

            <CheckBox
                android:id="@+id/log_service2check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="[필수] 개인정보처리방침 동의"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_scroll" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/log_scroll2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/my_gray_edittext"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_service2check"
                tools:layout_editor_absoluteY="220dp">

                <TextView
                    android:id="@+id/log_long2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                   />
            </androidx.core.widget.NestedScrollView>

            <CheckBox
                android:id="@+id/log_service3check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="[선택] 이메일 수신동의 (쿠폰, 이벤트)"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_scroll2" />

            <CheckBox
                android:id="@+id/log_service4check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="[선택] SMS 수신동의 (쿠폰, 이벤트)"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_service3check" />

            <Button
                android:id="@+id/log_fin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:text="회원가입"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_service4check" />

            <TextView
                android:id="@+id/log_IDexist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:text="이미 존재하는 아이디입니다"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/log_PWnotEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="입력한 비밀번호가 다릅니다"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/log_myPWconfirm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="30dp"
                android:text="*"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintLeft_toRightOf="@id/log_sec1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="50dp"
                android:text="*"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintLeft_toRightOf="@id/log_sec2"
                app:layout_constraintTop_toBottomOf="@id/log_myPWconfirm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="50dp"
                android:text="*"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintLeft_toRightOf="@id/log_sec3"
                app:layout_constraintTop_toBottomOf="@id/log_myPhone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="50dp"
                android:text="*"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintLeft_toRightOf="@id/log_sec4"
                app:layout_constraintTop_toBottomOf="@id/log_myBirthBtn" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="50dp"
                android:text="*"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintLeft_toRightOf="@id/log_sec5"
                app:layout_constraintTop_toBottomOf="@id/log_myEmail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:text="*"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintLeft_toRightOf="@id/log_service1check"
                app:layout_constraintTop_toBottomOf="@id/log_sec6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:text="*"
                android:textColor="@android:color/holo_orange_dark"
                app:layout_constraintLeft_toRightOf="@id/log_service2check"
                app:layout_constraintTop_toBottomOf="@id/log_scroll" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>