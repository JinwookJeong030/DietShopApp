<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/pp_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="상품명"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/pp_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/pp_item_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/pp_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량 : 0개"
        app:layout_constraintLeft_toRightOf="@id/pp_item_image"
        app:layout_constraintTop_toTopOf="@id/pp_item_name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/pp_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="0원"
        app:layout_constraintLeft_toRightOf="@id/pp_item_image"
        app:layout_constraintTop_toTopOf="@id/pp_item_name"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>



</androidx.constraintlayout.widget.ConstraintLayout>