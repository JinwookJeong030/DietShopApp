<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    tools:context=".mypage.PasswordChangeActivity">

    <include
        layout="@layout/actionbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/pw_origin_password"
            android:hint="기존 비밀번호"
            android:padding="5dp"
            android:password="true"
            android:background="@drawable/my_gray_edittext"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/pw_change_password"
            android:hint="새 비밀번호"
            android:padding="5dp"
            android:enabled="false"
            android:password="true"
            android:background="@drawable/my_gray_edittext"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/pw_change_password_confirm"
            android:password="true"
            android:hint="새 비밀번호 확인"
            android:enabled="false"
            android:padding="5dp"
            android:background="@drawable/my_gray_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/pw_change_ckecking_state"
            android:text="비밀번호가 다릅니다."
            android:visibility="invisible"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/pw_change_okbtn"
            android:clickable="false"
            android:layout_marginTop="50dp"
            android:text="변경"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</LinearLayout>