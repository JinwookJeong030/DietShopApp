<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include
        android:layout_gravity="top"
        android:id="@+id/diet_main_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/actionbar_top"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
             android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/detail_diet_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_diet_camera"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="20dp"
        />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_marginHorizontal="10dp"
        >
        <TextView
            android:id="@+id/detail_diet_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="period"/>
        <View
            android:layout_height="30dp"
            android:layout_width="1dp"
            android:layout_toRightOf="@+id/edit_diet_period"
            android:background="#949494"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:id="@+id/detail_diet_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="date"/>
        <View
            android:layout_height="30dp"
            android:layout_width="1dp"
            android:layout_toRightOf="@+id/edit_diet_period"
            android:background="#949494"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:id="@+id/detail_diet_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="time"/>


    </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#4682B4" />

    <TextView
        android:id="@+id/detail_diet_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contents"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />


            <LinearLayout
                android:id="@+id/diet_detail_diet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="식단 기록"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_400" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 먹은 음식 : "
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/diet_detail_meal_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray_400" />


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 칼로리 : "
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/diet_detail_kcal_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" kcal"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray_400" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/diet_detail_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <View
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동 기록"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="17dp"/>
                <View
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_400" />
                <LinearLayout

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="오늘의 몸무게 : "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/diet_detail_weight_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="text"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=" kg"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray_400" />
                <LinearLayout

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"

                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="오늘의 키 : "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/diet_detail_height_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="text"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=" cm"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray_400" />
                <LinearLayout

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"

                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="체 지방량 : "
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/diet_detail_fat_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="text"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=" %"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray_400" />
                <LinearLayout

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"

                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="운동 부위 : "
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/diet_detail_part_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="text"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray_400" />
                <LinearLayout

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"

                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="운동 시간 : "
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/diet_detail_minute_content"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="text"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />
                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=" 분"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray_400" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:layout_marginBottom="80dp"/>








        </LinearLayout>

    </ScrollView>

</LinearLayout>