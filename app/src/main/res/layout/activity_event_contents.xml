<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".eventnotice.EventContentsActivity"
    android:background="@color/white">

<!--   제목-->
    <include
        layout="@layout/actionbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/event_contents_title"
        android:gravity="center"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/event_contents_term"
        android:gravity="center"
        android:text="0000-00-00~1111-11-11"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"/>

    <View
        android:background="@color/gray_800"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/event_contents_substance"
        android:padding="10dp"
        android:text="내용"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/event_contents_image"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>