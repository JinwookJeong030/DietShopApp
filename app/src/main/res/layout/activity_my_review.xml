<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MyReviewActivity"
    android:background="@color/gray_200">

    <include
        android:layout_gravity="top"
        android:id="@+id/diet_main_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/actionbar_top"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/mypage_move_actionbar"/>
    <View
        android:background="@color/gray_500"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:gravity="left"
        android:layout_margin="10dp"
        android:text="내가 쓴 리뷰 목록"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="목록 클릭시 삭제 할 수 있습니다."
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray_600"
        />
    <View
        android:background="@color/gray_500"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView

        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ListView
                android:id="@+id/my_review_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/gray_400"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>