<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/consignment_listView_name"
            android:text="이름"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/consignment_listView_phoneNum"
            android:layout_marginLeft="10dp"
            android:text="010-0000-0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/consignment_listView_address"
        android:layout_marginTop="10dp"
        android:text="주소"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/consignment_listView_modify"
            android:text="수정"
            android:background="@drawable/my_gray_edittext"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/consignment_listView_delete"
            android:text="삭제"
            android:layout_marginLeft="10dp"
            android:background="@drawable/my_gray_edittext"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/consignment_listView_baseAddress_choice"
            android:text="기본배송지로 설정"
            android:textColor="@color/orange"
            android:background="@drawable/my_orange_edittext"
            android:layout_marginLeft="120dp"
            android:layout_width="130dp"
            android:layout_height="30dp"/>
    </LinearLayout>

</LinearLayout>